                    <!--                        android:enabled="false"-->
                    <!--                        android:singleLine="true"-->
                    <!--                        android:text="Male"-->
                    <!--                        android:textSize="14sp" />-->

                    <CheckBox
                        android:id="@+id/cbEdit_Gender"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:button="@drawable/edit_checkbox" />
                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <RelativeLayout
                android:id="@+id/layout_phone"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/profile_button"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/tvphone"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_phone"
                    android:text="Phone-Number" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvphone"

                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/input_phone"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:enabled="false"
                        android:singleLine="true"
                        android:text="0376822362"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cbEdit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:button="@drawable/edit_checkbox" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_Email"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/profile_button"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_gender"
                    android:text="Email" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvEmail"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/input_email"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:enabled="false"
                        android:singleLine="true"
                        android:text="HKLNT@gmail.com"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cbEdit_email"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:button="@drawable/edit_checkbox" />
                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

