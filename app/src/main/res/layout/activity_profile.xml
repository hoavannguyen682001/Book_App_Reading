<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/profile_account"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Profile Account"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/btnlogout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_login"
                android:background="#00000000"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:background="@drawable/custom_account"
            android:src="@drawable/ic_account" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="User name"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:background="@drawable/profile_edit"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <RelativeLayout
                android:id="@+id/layout_name"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/profile_button">

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_person"
                    android:text="Name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvname"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp">

                    <EditText
                        android:id="@+id/input_name"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:enabled="false"
                        android:singleLine="true"
                        android:text="Tran van khanh"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cbEdit_name"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:button="@drawable/edit_checkbox" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_Gender"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/profile_button"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/tvGender_Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_gender"
                    android:text="Gender" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvGender_Profile"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        app:hintTextColor="@color/black"
                        app:boxBackgroundMode="filled"
                        android:enabled="false">

                        <AutoCompleteTextView
                            android:id="@+id/Gender_Profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:inputType="none"
                            android:text="Male"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <!--                    <EditText-->
                    <!--                        android:id="@+id/input_gender"-->
                    <!--                        android:layout_width="100dp"-->
                    <!--                        android:layout_height="wrap_content"-->
