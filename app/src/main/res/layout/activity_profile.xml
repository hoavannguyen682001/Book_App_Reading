<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/profile_account"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Profile Account"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/btnlogout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_login"
                android:background="#00000000"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:background="@drawable/custom_account"
            android:src="@drawable/ic_account" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="User name"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:background="@drawable/profile_edit"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/name"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:background="@drawable/profile_button">

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/ic_person"
                    android:text="Name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        app:boxStrokeColor="#EAEFEF"
                        app:hintTextColor="@color/black">

                        <AutoCompleteTextView
                            android:id="@+id/tvGender_SignUp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="none"
                            android:paddingLeft="10dp"
                            android:text="abcasca"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <CheckBox
                        android:id="@+id/cbEdit_name"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/input_name"
                        android:background="@color/white"
                        android:button="@drawable/edit_checkbox" />
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/gender"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/profile_button"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_gender" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal|top"
                        android:text="Gender"
                        android:textAllCaps="false" />
                </LinearLayout>

                <EditText
                    android:id="@+id/input_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:inputType="none"
                    android:text="Male/Female"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/edit_gender"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:src="@drawable/ic_edit" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/Phone"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:background="@drawable/profile_button"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_phone" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal|top"
                        android:text="Phone number"
                        android:textAllCaps="false" />
                </LinearLayout>

                <EditText
                    android:id="@+id/input_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:inputType="none"
                    android:text="0901-XXXXX"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/edit_phone"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:src="@drawable/ic_edit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Email"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/profile_button"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_email" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal|top"
                        android:text="Email"
                        android:textAllCaps="false" />
                </LinearLayout>

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:inputType="none"
                    android:text="HKLNT@gmail."
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/edit_email"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:src="@drawable/ic_edit" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bookshefl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/profile_button"
            android:drawableLeft="@drawable/ic_book"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:text="Bookshelf"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_button"
            android:drawableLeft="@drawable/ic_feedback"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:text="Your feedback"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/introduce"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/profile_button"
            android:drawableLeft="@drawable/ic_intro"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:text="Introduce us"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#6E399E"
        app:itemIconTint="@drawable/item_selected"
        app:itemTextColor="@color/white"
        app:menu="@menu/item_menu" />
</RelativeLayout>
