        android:supportsRtl="true"
        android:theme="@style/Theme.Book_App_Reading">

        <activity android:name=".Activity.HomeActivity"></activity>

        <activity android:name=".Activity.Book_Detail_Activity">
        </activity>
        <activity android:name=".Activity.LibraryActivity">
